<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruhua.springtest.mapper.TeamInfoMapper">

    <resultMap id="BaseResultMap" type="com.ruhua.springtest.domain.TeamInfo">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="owner" column="owner" jdbcType="INTEGER"/>
            <result property="createAt" column="create_at" jdbcType="TIMESTAMP"/>
            <result property="updateAt" column="update_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,owner,
        create_at,update_at
    </sql>
    <select id="getTeamInfoByName" resultMap="BaseResultMap">
        select * from team_info where name = #{name} and owner = #{owner}
    </select>
    <select id="selectTeam" resultMap="BaseResultMap">
        select * from team_info where id = #{teamId}
    </select>
    <select id="searchForTeam" resultMap="BaseResultMap">
        select * from team_info where name like %#{text}%
    </select>
</mapper>
